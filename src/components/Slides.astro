---
/**
 * Slides component - Slideshow with lightbox support
 *
 * Usage in MDX:
 * <Slides images={[
 *   { src: "/path/to/image1.webp", alt: "Description" },
 *   { src: "/path/to/image2.webp" },
 *   { src: "https://www.youtube.com/watch?v=VIDEO_ID" },
 * ]}>
 *   Caption for slide 1
 *
 *   Caption for slide 2
 *
 *   Caption for slide 3
 * </Slides>
 */

interface SlideImage {
  src: string;
  alt?: string;
  caption?: string;
}

interface Props {
  images: SlideImage[];
}

const { images } = Astro.props;
const rawContent = await Astro.slots.render('default') || '';

// Parse captions from slot content
// MDX may render as: <ol><li>...</li></ol>, <p>...</p><p>...</p>, or plain text with double newlines
let slotCaptions: string[] = [];

if (rawContent) {
  // Check if content is wrapped in an ordered list (MDX renders numbered lines as <ol>)
  // Note: MDX may use <ol start="0"> or similar attributes
  if (rawContent.includes('<ol') && rawContent.includes('<li>')) {
    // Extract content from each <li> tag
    const liMatches = rawContent.match(/<li[^>]*>([\s\S]*?)<\/li>/gi);
    if (liMatches) {
      slotCaptions = liMatches.map((li: string) =>
        li
          .replace(/<\/?li[^>]*>/gi, '')
          .replace(/^[\s\n]*<p>/, '')  // Remove leading <p>
          .replace(/<\/p>[\s\n]*$/, '') // Remove trailing </p>
          .trim()
      );
    }
  } else {
    // Split by </p><p> patterns, <br><br>, or double newlines
    slotCaptions = rawContent
      .split(/<\/p>\s*<p>|<br\s*\/?>\s*<br\s*\/?>|\n\n+/)
      .map((c: string) => c.replace(/<\/?p>/g, '').trim())
      .filter((c: string) => c.length > 0);
  }
}

// Use captions from images array if provided, otherwise fall back to slot content
const captions = images.map((img, index) => img.caption || slotCaptions[index] || '');

// Process image sources - convert YouTube URLs to embeds
function processSource(src: string): { url: string; type: 'image' | 'video' | 'youtube' } {
  // YouTube watch URL
  if (src.includes('youtube.com/watch')) {
    const videoId = new URL(src).searchParams.get('v');
    return {
      url: `https://www.youtube.com/embed/${videoId}?rel=0&controls=1&showinfo=0&vq=hd1080`,
      type: 'youtube'
    };
  }
  // YouTube short URL
  if (src.includes('youtu.be/')) {
    const videoId = src.split('youtu.be/')[1]?.split(/[?#]/)[0];
    return {
      url: `https://www.youtube.com/embed/${videoId}?rel=0&controls=1&showinfo=0&vq=hd1080`,
      type: 'youtube'
    };
  }
  // YouTube embed URL (add params if missing)
  if (src.includes('youtube.com/embed')) {
    const hasParams = src.includes('?');
    return {
      url: hasParams ? src : `${src}?rel=0&controls=1&showinfo=0&vq=hd1080`,
      type: 'youtube'
    };
  }
  // Video file
  if (src.endsWith('.webm') || src.endsWith('.mp4')) {
    return { url: src, type: 'video' };
  }
  // Default to image
  return { url: src, type: 'image' };
}

const processedImages = images.map((img, index) => ({
  ...processSource(img.src),
  alt: img.alt || '',
  caption: captions[index]
}));

const slidesData = JSON.stringify(processedImages);
---

<div class="slides-component" data-slides={slidesData}>
  <div class="slides-main">
    <div class="slides-wrapper">
      {processedImages.map((slide, index) => (
        <div class={`slide ${index === 0 ? 'active' : ''}`} data-index={index}>
          <div class="slide-media">
            {slide.type === 'youtube' ? (
              <iframe src={slide.url} allowfullscreen loading="lazy"></iframe>
            ) : slide.type === 'video' ? (
              <video controls>
                <source src={slide.url} type={`video/${slide.url.split('.').pop()}`} />
              </video>
            ) : (
              <img src={slide.url} alt={slide.alt} loading="lazy" />
            )}
          </div>
        </div>
      ))}

      <button class="slides-nav slides-prev" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <button class="slides-nav slides-next" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>

    <!-- Caption container uses CSS Grid stacking - all captions occupy same cell, tallest wins -->
    <div class="slides-caption-container">
      {processedImages.map((slide, index) => (
        <p
          class={`slides-caption ${index === 0 ? 'active' : ''}`}
          data-caption-index={index}
          set:html={slide.caption || '&nbsp;'}
        ></p>
      ))}
    </div>

    <div class="slides-dots">
      {processedImages.map((_, index) => (
        <button class={`dot ${index === 0 ? 'active' : ''}`} data-index={index} aria-label={`Go to slide ${index + 1}`}></button>
      ))}
    </div>
  </div>

  <!-- Lightbox -->
  <div class="lightbox" aria-hidden="true">
    <button class="lightbox-close" aria-label="Close lightbox">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="lightbox-content">
      <div class="lightbox-media-wrapper">
        <button class="lightbox-nav lightbox-prev" aria-label="Previous slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="lightbox-media"></div>

        <button class="lightbox-nav lightbox-next" aria-label="Next slide">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
      <!-- Lightbox captions use CSS Grid stacking - all captions in same cell, tallest wins -->
      <div class="lightbox-caption-container">
        {processedImages.map((slide, index) => (
          <p
            class={`lightbox-caption ${index === 0 ? 'active' : ''}`}
            data-lightbox-caption-index={index}
            set:html={slide.caption || '&nbsp;'}
          ></p>
        ))}
      </div>
      <div class="lightbox-dots"></div>
    </div>
  </div>
</div>

<style>
  .slides-component {
    width: 100%;
    margin: 1.5rem 0;
  }

  .slides-main {
    position: relative;
  }

  .slides-wrapper {
    position: relative;
    height: 60vh;
    min-height: 60vh;
    max-height: 60vh;
    overflow: hidden;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 60vh;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease;
  }

  .slide.active {
    opacity: 1;
    visibility: visible;
  }

  .slide-media {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    width: 100%;
    height: 100%;
  }

  .slide-media img,
  .slide-media video {
    max-height: 100%;
    max-width: 100%;
    width: auto;
    height: auto;
    border-radius: 0.25rem;
    object-fit: contain;
  }

  .slide-media iframe {
    width: 80vw;
    max-width: 900px;
    height: 100%;
    border: none;
    border-radius: 0.25rem;
  }

  /* Navigation arrows - positioned on the image */
  .slides-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: white;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s;
    z-index: 10;
  }

  .slides-nav:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  .slides-nav svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .slides-prev {
    left: 0.5rem;
  }

  .slides-next {
    right: 0.5rem;
  }

  /* Caption container uses CSS Grid stacking - all captions in same cell, tallest wins */
  .slides-caption-container {
    display: grid;
    align-items: start;
    padding-top: 1rem;
    padding-bottom: 0.5rem;
    max-width: min(800px, 90%);
    margin-left: auto;
    margin-right: auto;
  }

  /* All captions stack in grid cell 1/1, using opacity for show/hide */
  .slides-caption {
    grid-area: 1 / 1;
    font-family: 'Inter', system-ui, sans-serif;
    text-align: center;
    color: var(--sl-color-gray-2);
    font-size: 1.1rem;
    line-height: 1.5;
    margin: 0;
    padding: 0 1rem;
    width: 100%;
    box-sizing: border-box;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease;
  }

  .slides-caption.active {
    opacity: 1;
    visibility: visible;
  }

  /* Dots */
  .slides-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
  }

  .dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    background: var(--sl-color-gray-4);
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.2s, transform 0.2s;
    margin-top: 0;
  }

  .dot:hover {
    background: var(--sl-color-gray-3);
    transform: scale(1.15);
  }

  .dot.active {
    background: #43A047
  }

  /* Lightbox styles - full screen overlay */
  .lightbox {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    z-index: 99999;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-sizing: border-box;
  }

  .lightbox.open {
    display: flex;
  }

  .lightbox-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: transparent;
    border: none;
    color: white;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 10001;
    transition: transform 0.2s;
  }

  .lightbox-close:hover {
    transform: scale(1.1);
  }

  .lightbox-close svg {
    width: 2rem;
    height: 2rem;
  }

  .lightbox-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    max-height: 100%;
    padding: 1rem;
    box-sizing: border-box;
    overflow: hidden;
  }

  .lightbox-media-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    max-width: 100%;
  }

  .lightbox-nav {
    flex-shrink: 0;
    background: rgba(0, 0, 0, 0.5);
    border: none;
    border-radius: 50%;
    color: white;
    cursor: pointer;
    padding: 0.75rem;
    transition: background-color 0.2s, transform 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-nav:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: scale(1.1);
  }

  .lightbox-nav svg {
    width: 2rem;
    height: 2rem;
  }

  .lightbox-media {
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    max-width: calc(100% - 8rem);
  }

  .lightbox-media :global(img) {
    max-width: 100%;
    max-height: 75vh;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .lightbox-media :global(video) {
    max-width: 100%;
    max-height: 75vh;
    width: auto;
    height: auto;
  }

  .lightbox-media :global(iframe) {
    width: 80vw;
    max-width: 1200px;
    aspect-ratio: 16 / 9;
    border: none;
  }

  /* Lightbox caption container uses CSS Grid stacking - all captions in same cell, tallest wins */
  .lightbox-caption-container {
    width: 100%;
    max-width: min(800px, 90%);
    margin: 1rem 0 0.5rem 0;
    display: grid;
    align-items: start;
  }

  /* All lightbox captions stack in grid cell 1/1, using opacity for show/hide */
  .lightbox-caption {
    grid-area: 1 / 1;
    font-family: 'Inter', system-ui, sans-serif;
    color: white;
    text-align: center;
    font-size: 1.1rem;
    line-height: 1.5;
    padding: 0 1rem;
    margin: 0;
    width: 100%;
    box-sizing: border-box;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease;
  }

  .lightbox-caption.active {
    opacity: 1;
    visibility: visible;
  }

  .lightbox-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
  }

  .lightbox-dots :global(.dot) {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.2s, transform 0.2s;
    margin-top: 0;
  }

  .lightbox-dots :global(.dot:hover) {
    background: rgba(255, 255, 255, 0.7);
    transform: scale(1.15);
  }

  .lightbox-dots :global(.dot.active) {
    background: #43A047;
  }
</style>

<script>
  function initSlides() {
    document.querySelectorAll('.slides-component').forEach((component) => {
      const slidesData = JSON.parse(component.getAttribute('data-slides') || '[]');
      const slides = component.querySelectorAll('.slide');
      const dots = component.querySelectorAll('.slides-main .dot');
      const captions = component.querySelectorAll('.slides-caption');
      const prevBtn = component.querySelector('.slides-prev');
      const nextBtn = component.querySelector('.slides-next');

      // Lightbox elements
      const lightbox = component.querySelector('.lightbox') as HTMLElement;
      const lightboxMedia = component.querySelector('.lightbox-media') as HTMLElement;
      const lightboxCaptions = component.querySelectorAll('.lightbox-caption');
      const lightboxDots = component.querySelector('.lightbox-dots') as HTMLElement;
      const lightboxClose = component.querySelector('.lightbox-close');
      const lightboxPrev = component.querySelector('.lightbox-prev');
      const lightboxNext = component.querySelector('.lightbox-next');

      if (!slides || slides.length === 0) return;

      let currentIndex = 0;
      let lightboxIndex = 0;

      // Update main slideshow (not lightbox)
      function goToSlide(index: number) {
        // Pause any playing videos
        slides.forEach((slide) => {
          const video = slide.querySelector('video');
          if (video) video.pause();
        });

        // Update slides
        slides.forEach((slide, i) => {
          slide.classList.toggle('active', i === index);
        });

        // Update dots
        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === index);
        });

        // Update captions (CSS grid stacking handles height automatically)
        captions.forEach((caption, i) => {
          caption.classList.toggle('active', i === index);
        });

        currentIndex = index;
      }

      function nextSlide() {
        goToSlide((currentIndex + 1) % slides.length);
      }

      function prevSlide() {
        goToSlide((currentIndex - 1 + slides.length) % slides.length);
      }

      // Lightbox-only navigation (doesn't affect main slides)
      function goToLightboxSlide(index: number) {
        lightboxIndex = index;
        renderLightboxSlide(index);
      }

      function nextLightboxSlide() {
        goToLightboxSlide((lightboxIndex + 1) % slides.length);
      }

      function prevLightboxSlide() {
        goToLightboxSlide((lightboxIndex - 1 + slides.length) % slides.length);
      }

      // Main slideshow navigation
      prevBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        prevSlide();
      });
      nextBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        nextSlide();
      });
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => goToSlide(index));
      });

      // Click on media to open lightbox
      slides.forEach((slide, index) => {
        const media = slide.querySelector('.slide-media');
        media?.addEventListener('click', () => {
          openLightbox(index);
        });
      });

      // Lightbox functions
      function renderLightboxSlide(index: number) {
        const slide = slidesData[index];
        if (!slide || !lightboxMedia) return;

        // Pause any existing videos in lightbox
        const existingVideo = lightboxMedia.querySelector('video');
        if (existingVideo) existingVideo.pause();

        // Render media
        if (slide.type === 'youtube') {
          lightboxMedia.innerHTML = `<iframe src="${slide.url}" allowfullscreen></iframe>`;
        } else if (slide.type === 'video') {
          lightboxMedia.innerHTML = `<video controls><source src="${slide.url}" type="video/${slide.url.split('.').pop()}"></video>`;
        } else {
          lightboxMedia.innerHTML = `<img src="${slide.url}" alt="${slide.alt || ''}">`;
        }

        // Update captions (CSS grid stacking handles height automatically)
        lightboxCaptions.forEach((caption, i) => {
          caption.classList.toggle('active', i === index);
        });

        // Update dots
        if (lightboxDots) {
          lightboxDots.querySelectorAll('.dot').forEach((dot, i) => {
            dot.classList.toggle('active', i === index);
          });
        }
      }

      function openLightbox(index: number) {
        lightboxIndex = index;

        // Create dots in lightbox
        if (lightboxDots) {
          lightboxDots.innerHTML = slidesData.map((_: any, i: number) =>
            `<button class="dot ${i === index ? 'active' : ''}" data-index="${i}" aria-label="Go to slide ${i + 1}"></button>`
          ).join('');

          // Add click handlers to lightbox dots
          lightboxDots.querySelectorAll('.dot').forEach((dot, i) => {
            dot.addEventListener('click', () => {
              goToLightboxSlide(i);
            });
          });
        }

        renderLightboxSlide(index);
        // Move lightbox to body to escape any stacking contexts
        document.body.appendChild(lightbox);
        lightbox.classList.add('open');
        document.body.style.overflow = 'hidden';
        document.documentElement.classList.add('lightbox-open');
      }

      function closeLightbox() {
        // Pause any playing videos
        const video = lightboxMedia?.querySelector('video');
        if (video) video.pause();

        // Sync main slides to the lightbox position when closing
        goToSlide(lightboxIndex);

        lightbox.classList.remove('open');
        document.body.style.overflow = '';
        document.documentElement.classList.remove('lightbox-open');
        // Move lightbox back to component
        component.appendChild(lightbox);
      }

      // Lightbox navigation
      lightboxClose?.addEventListener('click', (e) => {
        e.stopPropagation();
        closeLightbox();
      });
      lightboxPrev?.addEventListener('click', (e) => {
        e.stopPropagation();
        prevLightboxSlide();
      });
      lightboxNext?.addEventListener('click', (e) => {
        e.stopPropagation();
        nextLightboxSlide();
      });

      // Close on backdrop click
      lightbox?.addEventListener('click', (e) => {
        // Only close if clicking directly on the lightbox backdrop
        if (e.target === lightbox) {
          closeLightbox();
        }
      });

      // Also close when clicking on the content area but not on interactive elements
      const lightboxContent = lightbox.querySelector('.lightbox-content');
      lightboxContent?.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        // Don't close if clicking on buttons, images, captions, or dots
        if (target.closest('button') || target.closest('img') || target.closest('iframe') ||
            target.closest('.lightbox-caption') || target.closest('.lightbox-dots')) {
          return;
        }
        closeLightbox();
      });

      // Close on Escape key and arrow key navigation in lightbox
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && lightbox.classList.contains('open')) {
          closeLightbox();
        }
        if (lightbox.classList.contains('open')) {
          if (e.key === 'ArrowLeft') prevLightboxSlide();
          if (e.key === 'ArrowRight') nextLightboxSlide();
        }
      });
    });
  }

  initSlides();
  document.addEventListener('astro:page-load', initSlides);
</script>
