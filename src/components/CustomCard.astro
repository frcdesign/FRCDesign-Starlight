---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
	title: string;
    /** Optional text to display next to the title (non-hyperlinked) */
    subTitle?: string;
}

const { title, subTitle, href, ...attributes } = Astro.props;
---

<div class="custom-card">
	<div class="card-header">
		<a href={href} class="title-link" {...attributes}>
			<span class="title" set:html={title} />
		</a>
        {/* Render the subtitle if it exists */}
        {subTitle && <span class="card-subtitle" set:html={subTitle} />}

        {/* Copy to Clipboard Button */}
        {href && (
            <button class="copy-btn" data-href={href} aria-label="Copy link to clipboard">
                <span class="icon-default">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
                </span>
                <span class="icon-copied">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                </span>
            </button>
        )}
	</div>
	<div class="card-body">
		<slot />
	</div>
</div>

<style>
	@layer starlight.components {
		.custom-card {
			/* Layout */
			display: flex;
			flex-direction: column;
			gap: 0.5rem;

			/* Styling */
			border: 1px solid var(--sl-color-gray-5);
			border-radius: 0.5rem;
			padding: 1rem;
			background-color: var(--sl-color-black);
            
            height: 100%;

            /* Base Shadow and Transition */
			box-shadow: var(--sl-shadow-sm);
            transition: box-shadow 0.3s ease-in-out, border-color 0.3s ease-in-out;
		}

		/* Hover State Updates */
		.custom-card:hover {
            /* Stronger shadow for the "lift" effect */
            box-shadow: var(--sl-shadow-xl, 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1));
			
            /* Subtle border highlight */
			border-color: var(--sl-color-gray-2);
		}

        .card-header {
            /* Align title and subtitle on the same line */
            display: flex;
            align-items: center;
            gap: 0.5rem; 
            flex-wrap: wrap; 
        }

		.title-link {
			text-decoration: none;
			line-height: var(--sl-line-height-headings);
			color: var(--sl-color-white);
			font-weight: 600;
			font-size: var(--sl-text-lg);
		}

		.title-link[href] {
			color: var(--sl-color-text-accent);
		}

		.title-link:hover {
			text-decoration: underline;
		}

        /* Style for the subtitle prop */
        .card-subtitle {
            color: var(--sl-color-gray-3);
            font-size: var(--sl-text-lg);
            font-weight: normal;
            font-style: italic; 
        }

        /* Copy Button Styles */
        .copy-btn {
            background: transparent;
            border: none;
            padding: 0.25rem;
            cursor: pointer;
            color: var(--sl-color-gray-4);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.25rem;
            transition: color 0.2s, background-color 0.2s;
            flex-shrink: 0;
            /* Optional: Push to the right if you prefer it separated */
            /* margin-left: auto; */
        }

        .copy-btn:hover {
            color: var(--sl-color-white);
            background-color: var(--sl-color-gray-6);
        }

        .copy-btn.copied {
            color: var(--sl-color-green);
        }

        /* Icon switching logic */
        .icon-copied {
            display: none;
        }

        /* When 'copied' class is present, hide default and show copied */
        .copy-btn.copied .icon-default {
            display: none;
        }
        .copy-btn.copied .icon-copied {
            display: block;
        }

		.card-body {
			color: var(--sl-color-gray-3);
			line-height: 1.5;

            /* Flex Configuration */
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            gap: 0.75rem; 
		}

        /* Reset Margins */
        .card-body > :global(*) {
            margin-top: 0 !important;
            margin-bottom: 0 !important;
        }

        /* Align "Aside" Components to Bottom */
        .card-body > :global(.aside) {
            margin-top: auto !important;
        }
	}
</style>

<script>
    // Handle Copy to Clipboard logic
    const copyButtons = document.querySelectorAll<HTMLButtonElement>('.copy-btn');

    copyButtons.forEach((btn) => {
        btn.addEventListener('click', async () => {
            const href = btn.dataset.href;
            if (!href) return;

            try {
                // If the href is relative, make it absolute based on current origin
                const textToCopy = new URL(href, window.location.origin).href;
                await navigator.clipboard.writeText(textToCopy);

                // Switch state to "copied"
                btn.classList.add('copied');

                // Revert back after 2 seconds
                setTimeout(() => {
                    btn.classList.remove('copied');
                }, 2000);
            } catch (err) {
                console.error('Failed to copy link: ', err);
            }
        });
    });
</script>